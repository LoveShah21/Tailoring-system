# ============================================
# Tailoring Management System - Environment Template
# ============================================
# Copy this file to .env and fill in your values

# Debug Mode (set to False in production!)
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-min-50-chars-long

# Database Configuration (MySQL 8.0+)
DB_NAME=tailoring_db
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_HOST=localhost
DB_PORT=3306

# ============================================
# Razorpay Configuration
# ============================================
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
# IMPORTANT: Use Gmail App Password, NOT regular password!
# Get App Password: Google Account → Security → 2-Step Verification → App Passwords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=Tailoring System <your_email@gmail.com>

# ============================================
# Application Settings
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1

# Default tax rate percentage
DEFAULT_TAX_RATE=18.00

# Default advance payment percentage
DEFAULT_ADVANCE_PERCENTAGE=50.00

# Low stock threshold in meters
LOW_STOCK_THRESHOLD=5.0

# Urgency surcharge percentage
URGENCY_SURCHARGE_PERCENTAGE=20.00
